{
	"extends": "@adonisjs/tsconfig/tsconfig.client.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"paths": {
			"~/*": ["./*"],
			"@/*": ["../*"]
		},
		"types": ["vite/client"]
	},
	"include": ["./**/*.ts", "./**/*.tsx"]
}
