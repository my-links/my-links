		"@japa/runner": "^3.1.4",
		"@swc/core": "^1.9.1",
		"@types/luxon": "^3.4.2",
		"@types/node": "^20.14.10",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@vitejs/plugin-react": "^4.3.3",
		"eslint": "^9.14.0",
		"hot-hook": "^0.3.1",
		"husky": "^9.1.6",
