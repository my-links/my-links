		"typescript": "~5.6.3",
		"vite": "^5.4.10"
	},
	"dependencies": {
		"@adonisjs/ally": "^5.0.2",
		"@adonisjs/auth": "^9.2.3",
		"@adonisjs/core": "^6.14.1",
		"@adonisjs/cors": "^2.2.1",
		"@adonisjs/inertia": "^1.2.3",
		"@adonisjs/lucid": "^21.3.0",
		"@adonisjs/session": "^7.5.0",
		"@adonisjs/shield": "^8.1.1",
		"@adonisjs/static": "^1.1.1",
		"@adonisjs/vite": "^3.0.0",
		"@inertiajs/react": "^1.2.0",
		"@izzyjs/route": "^1.2.0",
		"@mantine/core": "^7.13.4",
