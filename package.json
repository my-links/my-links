	"hotHook": {
		"boundaries": [
			"./app/controllers/**/*.ts",
			"./app/middleware/*.ts"
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"quoteProps": "as-needed",
		"bracketSpacing": true,
		"arrowParens": "always",
		"printWidth": 80
	},
	"lint-staged": {
		"*.js,*.ts,*.jsx,*.tsx": "eslint --cache --fix"
	},
	"volta": {
		"node": "22.11.0"
	}
}
