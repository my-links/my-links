{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolvePackageJsonExports": true,
		"resolvePackageJsonImports": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src"]
}
